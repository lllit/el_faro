{
    "version": 2,
    "builds": [
        {
            "src": "/api/index.php",
            "use": "vercel-php@0.7.3"
        },
        {
            "src": "/Public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/Assets/(.*)",
            "dest": "/Public/Assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/Public/index.php" 
        }
    ]
}